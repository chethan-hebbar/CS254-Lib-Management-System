<%- include("partials/header") -%>

<div class = "heading">
<h1 class = "head-text">Return a book</h1>
</div>

<div class="heading">
  <h4 class = "text">Enter book ID:</h4>
</div>

<form action="/return" method="post">
  <div class="form-group">
    <label class="formTitle" for="bookID">Book ID</label>
    <input type="number" class="form-control" name="bookID" id="bookID" placeholder="ID">
    <small id="bookIdHelp" class="formMutedText">Please get book ID from search section if you don't have it yet</small>
  </div>

  <button type="submit" class="btn btn-primary">Return</button>
</form>

<%- include("partials/footer") -%>
